node {
         stage ('Checkout SCM'){
                    git branch: 'master',url: 'https://github.com/prahask1996/angular7-sample.git'
         }
         
         stage('Install node modules'){
                      powershell 'npm install'
         }
         stage('Build'){
                     powershell 'npm run ng -- build --prod'
         }
         stage('Deploy'){
                      powershell 'pm2 restart all'
         }
     }
